<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <TableView fx:id="updateEntries" prefHeight="200.0" prefWidth="500.0">
      <columns>
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name"/>
          <TableColumn fx:id="currentVersionColumn" prefWidth="75.0" text="Current version"/>
          <TableColumn fx:id="newVersionColumn" prefWidth="75.0" text="New version"/>
      </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER_RIGHT" spacing="5.0">
        <Label fx:id="updateTypeLabel" alignment="TOP_LEFT" text="Check for updateEntries on startup:"/>
        <ComboBox fx:id="updateType" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
    </HBox>
</fx:root>
